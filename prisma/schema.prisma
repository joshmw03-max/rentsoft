// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  PROPERTY_MANAGER
  TENANT
  VENDOR
}

enum PropertyType {
  SINGLE_FAMILY
  MULTI_FAMILY
  APARTMENT
  CONDO
  TOWNHOUSE
  COMMERCIAL
}

enum PropertyStatus {
  ACTIVE
  INACTIVE
  UNDER_MAINTENANCE
}

enum UnitStatus {
  AVAILABLE
  OCCUPIED
  MAINTENANCE
  RESERVED
}

enum LeaseStatus {
  DRAFT
  ACTIVE
  EXPIRED
  TERMINATED
  PENDING_RENEWAL
}

enum ApplicationStatus {
  PENDING
  UNDER_REVIEW
  APPROVED
  REJECTED
  WITHDRAWN
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum PaymentType {
  RENT
  DEPOSIT
  LATE_FEE
  MAINTENANCE
  OTHER
}

enum MaintenanceStatus {
  OPEN
  IN_PROGRESS
  PENDING_APPROVAL
  COMPLETED
  CANCELLED
}

enum MaintenancePriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  phone         String?
  role          UserRole  @default(TENANT)
  active        Boolean   @default(true)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  properties        Property[]        @relation("PropertyManager")
  applications      Application[]
  leases            Lease[]
  payments          Payment[]
  maintenanceRequests MaintenanceRequest[]
  notifications     Notification[]

  @@index([email])
  @@index([role])
}

model Property {
  id          String         @id @default(cuid())
  name        String
  type        PropertyType
  status      PropertyStatus @default(ACTIVE)
  address     String
  city        String
  state       String
  zipCode     String
  country     String         @default("USA")
  description String?
  imageUrl    String?
  managerId   String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relations
  manager     User           @relation("PropertyManager", fields: [managerId], references: [id])
  units       Unit[]
  amenities   Amenity[]

  @@index([managerId])
  @@index([status])
}

model Unit {
  id             String     @id @default(cuid())
  propertyId     String
  unitNumber     String
  bedrooms       Int
  bathrooms      Decimal    @db.Decimal(3, 1)
  squareFeet     Int?
  monthlyRent    Decimal    @db.Decimal(10, 2)
  securityDeposit Decimal   @db.Decimal(10, 2)
  status         UnitStatus @default(AVAILABLE)
  description    String?
  imageUrls      String[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  // Relations
  property       Property   @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  leases         Lease[]
  applications   Application[]
  maintenanceRequests MaintenanceRequest[]

  @@unique([propertyId, unitNumber])
  @@index([propertyId])
  @@index([status])
}

model Amenity {
  id          String   @id @default(cuid())
  propertyId  String
  name        String
  description String?
  icon        String?
  createdAt   DateTime @default(now())

  // Relations
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
}

model Application {
  id                String            @id @default(cuid())
  unitId            String
  applicantId       String
  status            ApplicationStatus @default(PENDING)
  firstName         String
  lastName          String
  email             String
  phone             String
  currentAddress    String
  employmentStatus  String?
  employer          String?
  monthlyIncome     Decimal?          @db.Decimal(10, 2)
  moveInDate        DateTime?
  numOccupants      Int               @default(1)
  hasPets           Boolean           @default(false)
  petDescription    String?
  emergencyContact  String?
  emergencyPhone    String?

  // Screening
  creditScore       Int?
  backgroundCheck   Boolean           @default(false)
  backgroundCheckDate DateTime?

  notes             String?
  submittedAt       DateTime          @default(now())
  reviewedAt        DateTime?
  reviewedBy        String?

  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  // Relations
  unit              Unit              @relation(fields: [unitId], references: [id], onDelete: Cascade)
  applicant         User              @relation(fields: [applicantId], references: [id])
  documents         Document[]

  @@index([unitId])
  @@index([applicantId])
  @@index([status])
}

model Lease {
  id              String       @id @default(cuid())
  unitId          String
  tenantId        String
  status          LeaseStatus  @default(DRAFT)
  startDate       DateTime
  endDate         DateTime
  monthlyRent     Decimal      @db.Decimal(10, 2)
  securityDeposit Decimal      @db.Decimal(10, 2)
  lateFeeAmount   Decimal?     @db.Decimal(10, 2)
  lateFeeDay      Int?         @default(5)
  paymentDueDay   Int          @default(1)
  terms           String?
  specialClauses  String?
  signedAt        DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // Relations
  unit            Unit         @relation(fields: [unitId], references: [id])
  tenant          User         @relation(fields: [tenantId], references: [id])
  payments        Payment[]

  @@index([unitId])
  @@index([tenantId])
  @@index([status])
}

model Payment {
  id              String        @id @default(cuid())
  leaseId         String
  payerId         String
  amount          Decimal       @db.Decimal(10, 2)
  type            PaymentType   @default(RENT)
  status          PaymentStatus @default(PENDING)
  dueDate         DateTime
  paidDate        DateTime?
  paymentMethod   String?
  transactionId   String?       @unique
  stripePaymentId String?
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  lease           Lease         @relation(fields: [leaseId], references: [id])
  payer           User          @relation(fields: [payerId], references: [id])

  @@index([leaseId])
  @@index([payerId])
  @@index([status])
  @@index([dueDate])
}

model MaintenanceRequest {
  id          String              @id @default(cuid())
  unitId      String
  tenantId    String
  title       String
  description String
  priority    MaintenancePriority @default(MEDIUM)
  status      MaintenanceStatus   @default(OPEN)
  category    String?
  imageUrls   String[]
  cost        Decimal?            @db.Decimal(10, 2)
  vendorId    String?
  vendorName  String?
  scheduledAt DateTime?
  completedAt DateTime?
  notes       String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  // Relations
  unit        Unit                @relation(fields: [unitId], references: [id])
  tenant      User                @relation(fields: [tenantId], references: [id])

  @@index([unitId])
  @@index([tenantId])
  @@index([status])
  @@index([priority])
}

model Document {
  id            String      @id @default(cuid())
  applicationId String?
  fileName      String
  fileUrl       String
  fileType      String
  fileSize      Int
  uploadedAt    DateTime    @default(now())

  // Relations
  application   Application? @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@index([applicationId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String
  read      Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
}
